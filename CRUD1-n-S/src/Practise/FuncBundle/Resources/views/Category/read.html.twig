{% extends '::base.html.twig' %}

{% block pagename %}
<h2>Category Read</h2>
{% endblock %}

{% block body %}
<b><a href="/category/create">Create a new category</a></b>
<table>
<tr>
    <td>ID</td>
    <td>Name</td>
    <td>Description</td>
    <td>Position</td>
    <td>Category</td>
</tr>
{% for category in category %}
<tr>
    <td>{{ category.id }}</td>
    <td>{{ category.name }}</td>
    <td>{{ category.description }}</td>
    <td>{{ category.position }}</td>
    {% if category.category is not null %}
        <td>{{ category.category.name }}</td>
    {% else %}
        <td></td>
    {% endif %}
    <td><a href="/category/update/{{ category.id }}">Edit</a></td>
    <td><a href="/category/delete/{{ category.id }}">Delete</a></td>
</tr>
{% endfor %}
</table>
{% endblock %}